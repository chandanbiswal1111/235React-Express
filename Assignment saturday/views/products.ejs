<body>
  <link rel="stylesheet" href="styles/mystyles.css" />
  <nav>
    <ul>
      <li><a href="/">Back to Home</a></li>
    </ul>
  </nav>
  <h1 align="center">Product Details</h1>
  <div class="products-form-outer">
    <div class="products-form-inner">
      <form action="/calculateTotal" method="post">
        <label class="label" for="productName">Product Name:</label>
        <input
          class="input-fields"
          type="text"
          id="productName"
          name="productName"
          required
        />

        <label class="label" for="unitPrice">Unit Price:</label>
        <input
          class="input-fields"
          type="number"
          id="unitPrice"
          name="unitPrice"
          min="0"
          step="0.01"
          required
        />

        <label class="label" for="quantity">Quantity:</label>
        <input
          class="input-fields"
          type="number"
          id="quantity"
          name="quantity"
          min="1"
          required
        />

        <button type="submit">Get Total</button>
      </form>
    </div>
  </div>
  <div><label for="total">Total Amount:</label> <span><%= total %></span></div>
</body>